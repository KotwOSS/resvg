<svg 
    xmlns="http://www.w3.org/2000/svg" 
    xmlns:re="http://oss.kotw.dev/resvg"
    xmlns:greet="greet"
    width="100" height="100"
>
    <!-- Our library -->
    <re:lib ns="greet">
        <!-- Our pancaker component -->
        <re:comp name="pancaker">
            <p>Hey, </p>
            <re:slot>
                <!-- If slot is empty, X Man will be greeted -->
                <p>X Man</p>
            </re:slot>
            <p>Do you like pancakes?</p>
        </re:comp>
    </re:lib>

    <!-- Greet X Man -->
    <greet:pancaker />

    <!-- Greet Neo -->
    <greet:pancaker>
        <p>Neo</p>
    </greet:pancaker>
</svg>